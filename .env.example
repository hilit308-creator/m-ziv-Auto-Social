# YouTube API
YOUTUBE_API_KEY=...
YOUTUBE_CLIENT_ID=...
YOUTUBE_CLIENT_SECRET=...
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/youtube/callback

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=...
CLOUDINARY_API_KEY=...
CLOUDINARY_API_SECRET=...

# AWS S3 (Alternative Storage)
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_S3_BUCKET=auto-social-media

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
BASE_URL=http://localhost:3000

# M-Ziv AI Social API Key
MZIV_API_KEY=mziv_your_secret_api_key_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
SENTRY_DSN=...
DATADOG_API_KEY=...
LOG_LEVEL=info

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@autosocial.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret

# Feature Flags
ENABLE_AUTO_POSTING=true
ENABLE_AUTO_REPLIES=true
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_ANALYTICS=true
ENABLE_VIDEO_GENERATION=false

# Cron Jobs
ENABLE_CRON_JOBS=true
CRON_TIMEZONE=Asia/Jerusalem

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
COOKIE_SECRET=your-cookie-secret
SESSION_SECRET=your-session-secret

# Development
DEBUG=false
MOCK_SOCIAL_APIS=false
